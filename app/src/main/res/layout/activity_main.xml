<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Choose the numbers between 1 to 6:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp" />

    <Button
        android:id="@+id/randGen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="I am Feeling Lucky"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="#3366cc"/>
    <TextView
        android:id="@+id/ranNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/randGen"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text=" "/>
    <TextView
        android:id="@+id/cong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ranNum"
        android:layout_centerHorizontal="true"
        android:textColor="#8B0000"
        android:text=" "
        android:textSize="25sp"

        />
    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cong"
        android:layout_centerHorizontal="true"
        android:text="Points: 0"
        android:textColor="#000000"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/LetsPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/points"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Let's Play D-Icebreakers"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="#3366cc"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/LetsPlay"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/createNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Add a new D-Icebreaker"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="#3366cc"/>

</RelativeLayout>